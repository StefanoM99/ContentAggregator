<p style="color: green"><%= notice %></p>

<div class="container" id="profiles">
  <nav class="navbar navbar-expand-sm">
    <%= image_tag "logo.png" , :align=> "left", style: 'max-width:350px;height: auto', class: 'navbar-brand' %>
    <div class="container-fluid">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "Home", root_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "Go to feed", feed_path, class: 'nav-link' %></li>
      </ul>
    </div>
  </nav>
  <br>
  <div data-aos="fade-right">
    <h1 style='font-size:80px'><b>Profile</b></h1>
    <br>
    <div class="dropdown">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
        Content Filter
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "All", profile_path, class: 'dropdown-item' %></li>
        <li><%= link_to "My Posts", my_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Edited Posts", edited_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Starred Posts", starred_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Reported Posts", reported_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Starred Articles", starred_articles_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Reported Articles", reported_articles_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Starred Playlists", starred_playlists_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Reported Playlists", reported_playlists_path, class: 'dropdown-item' %></li>
      </ul>
    </div>
    <br>
    <div class="row" id="profiles">
      <% @profiles.each do |profile| %>
        <ul class="col-12 col-lg-4 col-sm-6">
          <li class="card" data-aos="flip-down">
            <div><%= render profile %></div>
          </li>
        </ul>   
      <% end %>
    </div>
  </div>
  
  <script>
    AOS.init();
  </script>
</div>