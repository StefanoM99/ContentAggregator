<p style="color: green"><%= notice %></p>

<div class="container" id="edited_posts">
  <nav class="navbar" data-aos="fade-down">
    <%= image_tag "logo.png" , :align=> "left", style: 'max-width:350px;height: auto' %>
    <%= link_to "Home", root_path %>
  </nav>

  <div data-aos="fade-right">
    <h1>Edited posts</h1>
  </div>

  <div class="row" id="edited_posts">
    <% @edited_posts.each do |edited_post| %>
    
      <ul class="col-12 col-lg-4 col-sm-6">
        <li class="card" data-aos="flip-down">
          
          <div class="card-body"> 
            <%= render edited_post %>
          </div>

          <div class="card-footer">
            <%= link_to "Show this post", edited_post %> |
            <%= link_to 'Edit', edit_post_path(edited_post) %> |
            <%= link_to 'Delete', edited_post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
  <script>
    AOS.init();
  </script>
</div>