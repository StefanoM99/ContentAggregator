<div id="<%= dom_id edited_post %>">
  
  <div class="card-body">
    <small>
      <strong>Author:</strong>
      <%= edited_post.author %>
    </small>

    <h3 class="card-title">
      <strong><%= edited_post.title %></strong>
    </h3>

    <h6 class="card-text" style="color:#8A8A8A">
      <%= edited_post.summary %>
    </h6>

    <% if edited_post.image != nil %>
      <h6 class="card-text" style="color:#8A8A8A">
        <img src="<%= edited_post.image %>">
      </h6>
    <% end %>

    <% if edited_post.video != nil %>
      <h6 class="card-text" style="color:#8A8A8A">
        <video width="320" height="240" controls>
          <source src="<%= edited_post.video %>" type="video/mp4">
        </video> 
      </h6>
    <% end %>
  </div>

  <div class="card-footer">
    <%= link_to 'Show', edited_post, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'} %> 
            
    <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
      </div>
    </div>
      <%if (current_user.id == params[:user_id].to_i || current_user.id == params[:id].to_i )%>
    <%= link_to 'Delete', edited_post, method: :delete, data: { confirm: 'Are you sure?' } %>
     <%else%>
    <%end%>
  </div>
</div>
