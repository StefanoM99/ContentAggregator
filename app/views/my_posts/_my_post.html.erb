<div id="<%= dom_id my_post %>">
  <% if my_post.post_file.attached? %>
    <% if my_post.post_file.content_type.include?("image") %>
      <%= image_tag url_for(my_post.post_file), class: "img-fluid card-img-top" %>
    <% else %>
      <%= video_tag url_for(my_post.post_file), controls: true, style: "width: 100%; height: auto;" %>
    <% end%>
  <% end %>

  <div class="card-body">
    <small>
      <strong>Author:</strong>
      <%= my_post.author %>
    </small>

    <h3 class="card-title">
      <strong><%= my_post.title %></strong>
    </h3>

    <h6 class="card-text" style="color:#8A8A8A">
      <%= my_post.summary %>
    </h6>
  </div>

  <div class="card-footer">
    <%= link_to 'Show', my_post, {class: 'btn btn-primary btn-lg'} %> 
            
    <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
      </div>
    </div>
   
  
     <%if (current_user.id == params[:user_id].to_i || current_user.id == params[:id].to_i )%>
    <%= link_to 'Delete', my_post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%else%>
    <%end%>
  </div>
</div>
