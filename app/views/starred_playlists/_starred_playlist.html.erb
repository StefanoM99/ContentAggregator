</div>

<div id="<%= dom_id starred_playlist %>">
  <img src="<%= starred_playlist.spotify_img %>" class="img-fluid card-img-top">
  
  <div class="card-body">
    <h3 class="card-title">
      <strong><%= starred_playlist.name %></strong>
    </h3>
    <br>
    <h4 class="card-text" style="color:#8A8A8A">
      <%= starred_playlist.description %>
    </h4>
    <br>
    <small>
      <a href="<%= starred_playlist.spotify_url %>"><%= starred_playlist.spotify_url %></a>
    </small>
    <br>
    <small>
      <%= starred_playlist.tracks %>
    </small>
  </div>

  <div class="container mt-3">
    <%if PlaylistComment.find_by(playlist_id: starred_playlist.playlist_id)%>
      <p><i>Nessun commento</i></p>
    <%else%>
      <div id="accordion">
        <div class="d-grid">
          <a class="buttonclass" data-bs-toggle="collapse" href="#collapse_<%= starred_playlist.id %>">
            VISUALIZZA/NASCONDI COMMENTI
          </a>
        </div>
        <div id="collapse_<%= starred_playlist.id %>" class="collapse" data-bs-parent="#accordion">
          <br>
          <table class="table table-hover table-sm" style="border-collapse: collapse; width: 100%;">
            <thead style="background-color:green; color:white;">
              <tr>
                <th scope="col" style="border: 1px solid #dddddd;">AUTORE</th>
                <th scope="col" style="border: 1px solid #dddddd;">COMMENTO</th>
              </tr>
            </thead>
            <tbody>
              <%PlaylistComment.where(playlist_id: starred_playlist.playlist_id).each do |comment|%>
                <tr>
                  <td style="border: 1px solid #dddddd;"><%= comment.author %></td>
                  <td style="border: 1px solid #dddddd;"><%= comment.description %></td> 
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    <%end%>    
  </div>

  <div class="card-footer">
    <%= link_to 'Visualizza', starred_playlist, { class: 'buttonclass'} %> 

    <%if current_user%>
      <%if (current_user.id == params[:user_id].to_i || current_user.id == params[:id].to_i )%>
        <%= button_to 'Elimina', starred_playlist, method: :delete,class:"buttonclass" %>
      <%else%>
      <%end%>
    <%end%>
  </div>
</div>
