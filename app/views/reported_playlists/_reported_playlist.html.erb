<div id="<%= dom_id reported_playlist %>">
  <img src="<%= reported_playlist.spotify_img %>" class="img-fluid card-img-top">
  
  <div class="card-body">
    <h3 class="card-title">
      <strong><%= reported_playlist.name %></strong>
    </h3>
    <br>
    <h4 class="card-text" style="color:#8A8A8A">
      <%= reported_playlist.description %>
    </h4>
    <br>
    <small>
      <a href="<%= reported_playlist.spotify_url %>"><%= reported_playlist.spotify_url %></a>
    </small>
    <br>
    <small>
      <%= reported_playlist.tracks %>
    </small>
  </div>

  <div class="card-footer">
    <%= link_to 'Show', reported_playlist, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'} %> 
            
      <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content"></div>
        </div>
      </div>
        <%if (current_user.id == params[:user_id].to_i || current_user.id == params[:id].to_i )%>
      <%= link_to 'Delete', reported_playlist, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%else%>
    <%end%>
  </div>
</div>
