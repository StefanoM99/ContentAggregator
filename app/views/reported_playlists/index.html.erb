<%if user_signed_in? and not current_user.user?%>
  <div class="container" id="profiles">
    
    <header class=" header-active" data-aos="fade-down">  
    <%= image_tag "logo.png" , :align=> "middle", class: "logoHeader",style: 'max-width:350px;height: auto;overflow:hidden'%>
      
    <% if user_signed_in? %>      
      <ul> <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "LogLink" %></ul>
      <ul><%= link_to "Vai al Feed", feed_path ,class: 'Loglink' %></ul>
      <ul><%= link_to "Vai al Profilo", current_user ,class: 'Loglink' %></ul>
    <% else %>
      <ul><%= link_to "Registrati", "users/sign_up" ,class: 'Loglink' %></ul>
      <ul><%= link_to "Accedi", "/home" ,class: 'Loglink' %></ul>
    <% end %>
    <ul><%= link_to "Ricerca Utenti", "/users" ,class: 'Loglink' %></ul>
  </header>
  
  <br><br><br><br><br>
    <div data-aos="fade-right" style="text-align:center">
    
      <h1 style='font-size:80px'><b>Playlists Segnalate</b></h1>
      <br>
      <div class="dropdown">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
          Filtro Contenuti
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to "Tutto", current_user, class: 'dropdown-item' %></li>
        
      
          <li><%= link_to "Post Segnalati", reported_user_posts_path(params[:user_id]), class: 'dropdown-item' %></li>
          
          <li><%= link_to "Articoli Segnalati", reported_user_articles_path(params[:user_id]), class: 'dropdown-item' %></li>
          
          <li><%= link_to "Playlist Segnalate", reported_user_playlists_path(params[:user_id]), class: 'dropdown-item' %></li>
        </ul>
      </div>
      <br>
    
    <div class="row" id="reported_articles">
    
        <% SavedPlaylist.where(type: "ReportedPlaylist").each do |reported_playlist| %>
          <ul class="col-12 col-lg-4 col-sm-6">
            <li class="card" data-aos="flip-down">
              <%= render reported_playlist %>
            </li>
          </ul>
        <% end %>
    
      </div>
    </div>
    
    
    <script>
      AOS.init();
    </script>
  </div>
<%else%>
  <p style="color: green"><%= notice %></p>

  <div class="container" id="reported_playlists">
    <nav class="navbar navbar-expand-sm">
      <%= image_tag "logo.png" , :align=> "left", style: 'max-width:350px;height: auto', class: 'navbar-brand' %>
      <div class="container-fluid">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to "Vai al Feed", feed_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to "Vai al Profilo", current_user, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to "Ricerca Utenti", "/users" ,class: 'nav-link' %></li>
        </ul>
      </div>
    </nav>
    <br><br><br>
<%if current_user && current_user.id.to_i == params[:user_id].to_i%>
    <div style="text-align:center" data-aos="fade up">
    <%if current_user.avatar_url == nil %>
    <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png",class:"propic"%>
    <%else%>
    <br><br><br>
    <%= image_tag current_user.avatar_url,class:"propic"%>
    <%end%>
    <h1 style='font-size:80px'><b>Le tue Playlist Segnalate</b></h1>
    </div>
    <%else%>
     <div style="text-align:center" data-aos="fade-up">
     <%if User.find(params[:user_id].to_i).avatar_url == nil %>
     <br><br><br>
     <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png",class:"propic"%>
      <%else%>
    <%= image_tag User.find(params[:user_id].to_i).avatar_url,class:"propic"%>
    <%end%>
    <h1 style='font-size:80px'><b> Playlist Segnalate</b></h1>
    </div>
    <%end%>

    <div data-aos="fade-right">
      <br>
      <div class="dropdown">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
          Filtro Contenuti
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to "Tutto", user_path(@user), class: 'dropdown-item' %></li>
          <li><%= link_to "Miei Post", user_posts_path(params[:user_id]), class: 'dropdown-item' %></li>
          <li><%= link_to "Post Modificati", edited_user_posts_path(params[:user_id]), class: 'dropdown-item' %></li>
          <li><%= link_to "Post Salvati", starred_user_posts_path(params[:user_id]), class: 'dropdown-item' %></li>
          <li><%= link_to "Post Segnalati", reported_user_posts_path(params[:user_id]), class: 'dropdown-item' %></li>
          <li><%= link_to "Articoli Salvati", starred_user_articles_path(params[:user_id]), class: 'dropdown-item' %></li>
          <li><%= link_to "Articoli Segnalati", reported_user_articles_path(params[:user_id]), class: 'dropdown-item' %></li>
          <li><%= link_to "Playlist Salvate", starred_user_playlists_path(params[:user_id]), class: 'dropdown-item' %></li>
          <li><%= link_to "Playlist Segnalate", reported_user_playlists_path(params[:user_id]), class: 'dropdown-item' %></li>
        </ul>
      </div>
      <br>
      <div class="row" id="reported_playlists">
        <% SavedPlaylist.where(user_id: params[:user_id],type: "ReportedPlaylist").each do |reported_playlist| %>
          <ul class="col-12 col-lg-4 col-sm-6">
            <li class="card" data-aos="flip-down">
              <%= render reported_playlist %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    
    <script>
      AOS.init();
    </script>
  </div>
<%end%>