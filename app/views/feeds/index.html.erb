<p style="color: green"><%= notice %></p>

<div class="container" id="feeds">
  <nav class="navbar navbar-expand-sm">
    <%= image_tag "logo.png" , :align=> "left", style: 'max-width:350px;height: auto', class: 'navbar-brand' %>
    <div class="container-fluid">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "Home", root_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "Go to profile", current_user ,class: 'nav-link' %></li>
      </ul>
    </div>
  </nav>
  <br>
  <div data-aos="fade-right">
    <h1 style='font-size:80px'><b>Feed</b></h1>
    <br>
    <div class="dropdown">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
        Content Filter
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "All Contents", feed_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Articles", articles_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Playlists", playlists_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Posts", posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Forecast", forecasts_path, class: 'dropdown-item' %></li>
      </ul>
    </div>
    <br>
    <div>
      <%= render "filter", feed: @feed %>
      <br>
      <%= link_to "New post", new_post_path, class: 'btn btn-primary btn-lg pull-right' %>
    </div>
    <br><br>
    <div class="row" id="feeds">
      <% @feeds.each do |feed| %>
        <ul class="col-12 col-lg-4 col-sm-6">
          <li class="card" data-aos="flip-down">
            <div><%= render feed %></div>
          </li>
        </ul>   
      <% end %>
    </div>
  </div>
  
  <script>
    AOS.init();
  </script>
</div>

<!-- The Modal -->
<div class="modal fade" id="editPostModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Modal Heading</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        Modal body..
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
   <footer data-aos="fade-down">
        <div class="footer-content" >
            <h3>© 2022 ContentAggregator ®</h3>
            <p>Tutti i diritti
            riservati.<br>Immagini da: Storyset<br><a
                href="https://github.com/StefanoM99/ContentAggregator">github.com/StefanoM99/ContentAggregator</a></p>
         
        </div>
      

    </footer>
</div>
