
<p style="color: green"><%= notice %></p>

<div class="container" id="feeds">

  <header class="header-active"> 
    <%= image_tag "logo.png", :align=> "middle", class: "logoHeader" %>

    <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Menu
    </button>
    <ul class="dropdown-menu">
        <% if not current_page?(feed_path) and (not user_signed_in? or current_user.user?) %>
            <li><%= link_to "Feed", feed_path ,class: 'dropdown-item' %></li>
        <% end %>
        <% if not current_page?("/users") %>
            <li><%= link_to "Ricerca Utenti", "/users" ,class: 'dropdown-item' %></li>
        <% end %>
        <% if user_signed_in? %>
            <% if not current_page?(current_user) %>
              <li><%= link_to "Profilo", current_user ,class: 'dropdown-item' %></li>
            <% end %>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to 'Esci', destroy_user_session_path, :method => :delete, class: "dropdown-item" %></li>
        <% else %>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to "Registrati", "users/sign_up" ,class: 'dropdown-item' %></li>
            <li><%= link_to "Accedi", "/home" ,class: 'dropdown-item' %></li>
        <% end %>
    </ul>
  </header>
  
  <br><br><br><br><br>
  <div data-aos="fade-right" style="text-align:center">
    <h1 style='font-size:100px'><b>Feed</b></h1>
    <br>
    <div class="dropdown">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
        Filtro Contenuti
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "Tutti i Contenuti", feed_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Articoli", articles_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Playlist", playlists_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Post", posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Meteo", forecasts_path, class: 'dropdown-item' %></li>
      </ul>
    </div>
    <br>
    <div>
      <%= render "filter", feed: @feed %>
      <br>
      <% if user_signed_in? %>
      <%= link_to "Nuovo post", new_post_path, class: 'homebutton',style:"text-align:center" %>
      <%end%>
    </div>
    <br><br>
    <div class="row" id="feeds">
      <% @feeds.each do |feed| %>
        <ul class="col-12 col-lg-4 col-sm-6">
          <li class="card" data-aos="flip-down">
            <div><%= render feed %></div>
          </li>
        </ul>   
      <% end %>
    </div>
  </div>
   
      

   
  <script>
    AOS.init();
  </script>
</div>
    <footer data-aos="fade-down">
        <div class="footer-content" >
            <h3>© 2022 ContentAggregator ®</h3>
            <p>Tutti i diritti
            riservati.<br>Immagini da: Storyset<br><a
                href="https://github.com/StefanoM99/ContentAggregator">github.com/StefanoM99/ContentAggregator</a></p>
         
        </div>
         </footer>

