<div id="<%= dom_id article %>">
  <img src="<%= article.media %>" class="img-fluid card-img-top">
  
  <div class="card-body">
    <small>
      <strong>Source:</strong>
      <%= article.source %>
    </small>
    <br>
    <small>
      <strong>Author:</strong>
      <%= article.author %>
    </small>
    <br>
    <h3 class="card-title">
      <strong><%= article.title %></strong>
    </h3>

  
    <h4 class="card-text" style="color:#8A8A8A">
      <%= article.description %>
    </h4>
    <br>
    <h6 class="card-text" style="color:#CACACA">
      <%= article.summary %>
    </h6>
    <br>
    <small>
      <a href="<%= article.link %>"><%= article.link %></a>
    </small>
    <br>
    <small style="color:#CACACA">
      <strong>Publication:</strong>
      <%= article.publication %>
    </small>
  </div>

  <div class="card-footer">
    <%= link_to 'Show', article, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'} %> 
            
      <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content"></div>
        </div>
      </div>
  </div>
</div>
