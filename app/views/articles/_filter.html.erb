<%= form_with model: @article, url: '/articles', method: :get do |form| %>
  <div class="row">
    <div class="col-md">
      <%= form.label 'Nazione', style: "display: block" %>
      <%= form.country_select :country, include_blank: 'Seleziona una Nazione', only: (['AE', 'AR', 'AT', 'AU', 'BE', 'BG', 'BR', 'CA', 'CH', 'CN', 'CO', 'CU', 'CZ', 'DE', 'EG', 'FR', 'GB', 'GR', 'HK', 'HU', 'ID', 'IE', 'IL', 'IN', 'IT', 'JP', 'KR', 'LT', 'LV', 'MA', 'MX', 'MY', 'NG', 'NL', 'NO', 'NZ', 'PH', 'PL', 'PT', 'RO', 'RS', 'RU', 'SA', 'SE', 'SG', 'SI', 'SK', 'TH', 'TR', 'TW', 'UA', 'US', 'VE', 'ZA']) %>
    </div>

    <div class="col-md">
      <%= form.label :category, style: "display: block" %>
      <%= form.select :category, [
        ["Seleziona una Categoria", ""],
        ["business", "business"],
        ["entertainment", "entertainment"], 
        ["general", "general"], 
        ["health", "health"], 
        ["science", "science"],
        ["sports", "sports"],
        ["technology", "technology"]
      ] %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md">
      <%= form.submit "Cerca", :class=>"button" ,style:"background-color:white" %>
    </div>
  </div>
<% end %>