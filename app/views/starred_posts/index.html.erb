<p style="color: green"><%= notice %></p>

<div class="container" id="starred_posts">
  <nav class="navbar navbar-expand-sm">
    <%= image_tag "logo.png" , :align=> "left", style: 'max-width:350px;height: auto', class: 'navbar-brand' %>
    <div class="container-fluid">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "Home", root_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "Go to feed", feed_path, class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to "Go to profile", current_user, class: 'nav-link' %></li>
      </ul>
    </div>
  </nav>


  <div data-aos="fade-right">
    <h1 style='font-size:80px'><b>Starred Posts</b></h1>
    <br>
    <div class="dropdown">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown">
        Content Filter
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "All", current_user, class: 'dropdown-item' %></li>
        <li><%= link_to "My Posts", user_my_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Edited Posts", user_edited_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Starred Posts", user_starred_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Reported Posts", user_reported_posts_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Starred Articles", user_starred_articles_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Reported Articles", user_reported_articles_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Starred Playlists", user_starred_playlists_path, class: 'dropdown-item' %></li>
        <li><%= link_to "Reported Playlists", user_reported_playlists_path, class: 'dropdown-item' %></li>
      </ul>
    </div>
    <br>
    <div class="row" id="starred_posts">
      <% @starred_posts.each do |starred_post| %>
        <ul class="col-12 col-lg-4 col-sm-6">
          <li class="card" data-aos="flip-down">
            <%= render starred_post %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
  
  <script>
    AOS.init();
  </script>
</div>